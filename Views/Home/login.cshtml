@{
    <title>@ViewData["Title"]Login - Autismo em Foco</title>
}
@section Styles {
    <link href="/estilo/login.css" rel="stylesheet" />
}

@{
    Layout = "/Views/Shared/LoginLayout.cshtml";
}

@model LoginCadastroMVC.Models.User

<body>
    <div class="container" id="container">
        <!-- Formulário de Cadastro -->
        <div class="form-container sign-up">
            <form asp-action="Register" asp-controller="User" method="POST">
                <h1>Crie sua conta!</h1>

                <input asp-for="Nome" placeholder="Nome" required />
                <span asp-validation-for="Nome" class="text-danger"></span>

                <input asp-for="Email" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Senha" type="password" placeholder="Senha" required />
                <span asp-validation-for="Senha" class="text-danger"></span>

                <button type="submit">Cadastre-se</button>
            </form>
        </div>

        <!-- Formulário de Login -->
        <div class="form-container sign-in">
            <form asp-action="Login" asp-controller="User" method="POST">
                <h1>Entrar</h1>
                <span>Use seu email e senha</span>

                <input asp-for="Email" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Senha" type="password" placeholder="Senha" required />
                <span asp-validation-for="Senha" class="text-danger"></span>

                <button type="submit">Entrar</button>

                <!-- Mensagem de erro geral para o login -->
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            </form>
        </div>

        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Bem vindo de volta!</h1>
                    <p>Conecte usando seu email e senha!</p>
                    <button class="hidden" id="login">Entrar</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Seja bem vindo!</h1>
                    <p>Crie sua conta!</p>
                    <button class="hidden" id="register">Cadastre-se</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/transitions.js"></script>
</body>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.6/jquery.validate.unobtrusive.min.js"></script>


@section Scripts {
    <!-- Inclui os scripts de validação do lado do cliente -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
